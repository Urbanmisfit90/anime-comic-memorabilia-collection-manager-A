{
  "compilerOptions": {
    "module": "CommonJS", // Change to CommonJS
    "moduleResolution": "Node",
    "target": "ESNext",
    "strict": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "ts-node": {
    "esm": false // Disable ES modules support for ts-node
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
